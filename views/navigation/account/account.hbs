{{> header}}
<section class="form">
   <div class="wrapper">
      <form action="#/account" method="POST">
         <fieldset>
            <legend>Customer Details</legend>
            <p>
               <label for="registerUsername">Username *</label>
               <input type="text" name="username" class="form-control" id="registerUsername" placeholder="">
            </p>
            <p>
               <label for="registerPassword">Password *</label>
               <input type="password" name="password" class="form-control" id="registerPassword" placeholder="">
            </p>
            <p>
               <label for="registerRepeatPassword">Repeat Password *</label>
               <input type="password" name="repeatPassword" class="form-control" id="registerRepeatPassword" placeholder="">
            </p>
            <p id="gender-selector"><span id="gender">Gender</span>
               <input type="radio" id="male" name="gender" value="Male">
               <label for="male">Male</label>
               <input type="radio" id="female" name="gender" value="Female">
               <label for="female">Female</label>
            </p>
            <p>
               <label for="email">Email *</label>
               <input type="email" id="email" name="email" placeholder="your@email.com">
            </p>
            <p>
               <label for="phone">Phone</label>
               <input type="number" id="phone" name="phone" placeholder="+359885236225">
            </p>
            <p>
               <label for="town">Town</label>
               <select name="town" id="town">
                  <option value="varna">Varna</option>
                  <option value="varna">Burgas</option>
                  <option value="varna">Plovdiv</option>
                  <option value="varna">Sofia</option>
               </select>
            </p>
            <p>
               <label for="age">Age</label>
               <input type="number" id="age" name="age" min="18" max="120">
            </p>
            <p id="message-area">
               <label for="message">Message</label>
               <textarea id="message" name="message" cols="35" rows="5" placeholder="More information..."></textarea>
            </p>
            <p id="checkbox">
               <input type="checkbox" id="agree" name="agree">
               <label for="agree">Sign-up to our newsletter</label>
            </p>
            <p>
               <input type="submit" value="Send">
            </p>
         </fieldset>
      </form>
   </div>
</section>
<script>registerValidation()</script>
{{> footer}}